
@model List<GetCategoryVM>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategoriler</h3>
    </div>

    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Kategori Adı</th>
                    <th>Kategori Açıklaması</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        
                        <td>
                            @if (item.userFollowedCategories.SingleOrDefault(m => m.CategoryID == item.ID) != null)
                            {
                                <a class="btn btn-success btn-sm" id="btnFollow" asp-action="UnFollow" asp-route-id="@item.ID">Takip Ediliyor</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary btn-sm" id="btnUnFollow" asp-action="Follow" asp-route-id="@item.ID">+ Takip Et</a>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>