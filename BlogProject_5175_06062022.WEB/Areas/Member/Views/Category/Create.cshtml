
@model CreateCategoryDTO

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="card card-primary" style="position: relative; left: 50%;">
                <div class="card-header">
                    <h3 class="card-title">Category Save Panel</h3>
                </div>

                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name">Category Name</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Category Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input type="text" class="form-control" asp-for="Description" placeholder="Catgory Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>