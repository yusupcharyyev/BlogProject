<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogProject_5175</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
    <link href="~/css/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


</head>
<body class="sidebar-mini" style="height: auto;">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                </li>
            </ul>

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                    @await Component.InvokeAsync("GetUserInfo")
                </div>



                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!--Articles-->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Articles
                                    <span class="fas fa-angle-left right"></span>

                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Articles" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Oluştur</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="List" asp-controller="Articles" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Listele</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!--Categories-->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tree"></i>
                                <p>
                                    Categories
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Create" asp-controller="Category" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Oluştur</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="List" asp-controller="Category" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Listele</p>
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <!--Profile-->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Profile
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="Edit" asp-controller="Profile" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Görüntüle</p>
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-action="About" asp-controller="User" class="nav-link">
                                <i class="fa-solid fa-info nav-icon"></i>
                                <p>
                                    Hakkımızda
                                </p>
                            </a>
                        </li>
                        <!--LogOut-->
                        <li class="nav-item">
                            <a asp-action="LogOut" asp-controller="AppUser" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Çıkış Yap
                                    <span class="right badge badge-danger">Çıkış</span>
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <div class="content-wrapper" style="min-height: 1302.12px;">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row">

                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <footer class="main-footer">
            <strong>Copyright © 2021-2022 <a href="https://bilgeadam.com">BilgeAdam</a>.</strong>
            Tüm Hakları Saklıdır
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.2.0-rc
            </div>
        </footer>
        <div id="sidebar-overlay"></div>
    </div>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <script src="~/js/adminlte.js"></script>
    <script src="~/js/demo.js"></script>
    <script src="~/js/dashboard3.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
